<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- <h1 class="title text-center text fs-1 fw-bold">To Do List</h1> -->
    <div class="container-main d-flex flex-wrap">
        
        <!-- Coluna lateral (Perfil e Filtros) -->
        <div class="tasks-display w-25 p-2">
            <div class="left-main-container d-flex flex-column">
                <div class="profile d-flex align-items-center gap-2 mb-3">
                    <img src="profile.png" alt="Profile" class="rounded-circle" width="40" height="40">
                    <h2 class="fs-5 m-0">Luiz Nazareth</h2>  
                </div>
                <div class="filters d-flex flex-column">
                    <form action="/GET">
                        <select name="category" id="category" class="form-select form-select-lg mb-3">
                            <option selected disabled>Select category</option>
                            <option value="">All</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </form>
                </div>
            </div>         
        </div>

        <!-- Coluna central (Lista de tarefas) -->
        <div class="task-display-container w-50 p-2">
            <div class="task-display-main d-flex flex-column">
                <div class="title-container">
                    <span class="title text-center text fw-bold">To Do List</span>
                    <button type="button" class="btn  add-task-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        New Task
                    </button>
                    <button class="btn btn order-tasks-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Order
                    </button>
                    <button class="btn btn-danger delete-tasks-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>
                </div>
                <div class="tasks-container mt-3">
                    <% tasks.forEach(task => { %>
                        <div class="task d-flex align-items-center gap-2 priority-<%= task.priority %> <%= task.completed ? 'completed' : '' %> period-<%= task.period %>">
                            <input type="checkbox" class="task-select" name="selectedTasks" value="<%= task.id %>">
                            <a href="/GET" class="flex-grow-1 text-decoration-none">
                                <p class="task-title mb-0"><%= task.title %></p>
                            </a>
                            <p class="completed mb-0 text-muted"><%= task.completed ? 'Completed' : 'Not Completed' %></p>
                        </div>
                    <% }); %>
                </div>
            </div>            
        </div>

        <!-- Coluna lateral direita (Detalhes da tarefa) -->
        <div class="task-display-container w-25 p-2">
            <div class="task-details-main-container">
                <span class="task-details-intro fw-bold">Task Details:</span>
                <div class="task-details-title fs-5 mt-2">Task Title</div>
                <div class="task-details-info mt-2">
                    <p class="task-description">Task Description</p>
                    <p class="task-due-date">Task Due Date</p>
                    <p class="task-priority">Task Priority</p>
                    <p class="task-createdAt">Task Created At</p>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="index.js"></script>
</html>
