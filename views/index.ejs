<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1 class="title text-center text-primary fs-1 fw-bold">To Do List</h1>
    <div class="container-main d-flex">
        <div class="tasks-display w-25">
            <div class="left-main-container d-flex flex-column">
                <div class="profile d-flex">
                    <img src="profile.png" alt="">
                    <h2>Luiz Nazareth</h2>  
                </div>
                <div class="filters d-flex flex-column">
                    <form action="/GET">
                        <select name="category" id="category" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                            <option selected>Open this select menu</option>
                            <option value="">All</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </form>
                </div>
            </div>
                     
        </div>
        <div class="task-display-container w-50">
            <div class="task-display-main d-flex flex-column">
                <div class="title-container d-flex align-items-center justify-content-center">
                    <span class="title text-center text-primary fw-bold">To Do List</span>
                    <button type="button" class="btn btn-primary add-task-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        New Task
                    </button>
                    <button class="btn btn-primary order-tasks-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Order
                    </button>
                    <button class="btn btn-primary delete-tasks-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>
                </div>
                <div class="tasks-container">
                    <% tasks.forEach(task => { %>
                        <div class="task priority-<%= task.priority %> <%= task.completed ? 'completed' : '' %> period-<%= task.period %>">
                            <a href="/GET"><p class="task-title"><%= task.title %></p"></a>
                            <p class="dueDate"><%= task.dueDate %></p>
                            <p class="completed"><%= task.completed ? 'Completed' : 'Not Completed' %></p>

                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="index.js"></script>
</html>